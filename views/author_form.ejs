<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=title%></title>
	</head>
	<body>
		<% extend("layout") %>
		<h1><%=title%></h1>
		<form action="" method="POST">
			<div class="form-group">
				<label for="first_name">First Name:</label>
				<input
					type="text"
					id="first_name"
					class="form-control"
					placeholder="First name (Bryan)"
					name="first_name"
					required
					value='<%= author == null ? "": author.first_name%>'
				/>
				<label for="family_name">Family Name:</label>
				<input
					type="text"
					id="family_name"
					class="form-control"
					placeholder="Family name (Surname)"
					name="family_name"
					required
					value='<%= author == null ? "" : author.family_name%>'
				/>
			</div>
			<div class="form-group">
				<label for="date_of_birth">Date of Birth:</label>
				<input
					type="date"
					id="date_of_birth"
					class="form-control"
					name="date_of_birth"
					value='<%= author == null ? "" : 
                    author.date_of_birth_yyyy_mm_dd %>'
				/>
				<label for="date_of_death">Date of Death:</label>
				<input
					type="date"
					id="date_of_death"
					class="form-control"
					name="date_of_death"
					value='<%= author == null ? "": author.date_of_death_yyyy_mm_dd %>'
				/>
			</div>
			<button class="btn btn-primary" type="submit">Submit</button>
		</form>
		<%if(errors){%>
		<ul>
			<%errors.forEach(function(error){%>
			<li><%=error.msg%></li>
			<%})}%>
		</ul>
	</body>
</html>
