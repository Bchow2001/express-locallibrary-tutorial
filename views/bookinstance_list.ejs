<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=title%></title>
	</head>
	<body>
		<% extend('layout') %>
		<h1><%=title%></h1>
		<%if(bookinstance_list.length){%>
		<ul>
			<%bookinstance_list.forEach(function(val){%>
			<li>
				<a href="<%=val.url%>"
					><%=val.book.title%> : <%=val.imprint%>-
				</a>
				<%if(val.status=="Available"){%>
				<span style="color: green"><%=val.status%></span>
				<% }else if(val.status =="Maintenance"){%>
				<span style="color: yellow"><%=val.status%></span>
				<%} else {%>
				<span style="color: red"><%=val.status%></span>
				<%} if (val.status != "Available"){ %>
				<span> Due: <%=val.due_back_formatted%></span>
				<%}%>
			</li>
			<%})}%>
		</ul>
	</body>
</html>
