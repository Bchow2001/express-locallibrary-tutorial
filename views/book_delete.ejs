<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=title%></title>
	</head>
	<body>
		<% extend("layout") %>
		<h1><%=title%>: <%=book.name%></h1>
		<p><%=book.lifespan%></p>
		<%if(book_instances.length){%>
		<p>
			<strong
				>Delete the following books before attempting to delete this
				book.
			</strong>
		</p>
		<div style="margin-left: 20px; margin-top: 20px">
			<h4>Books</h4>
			<dl>
				<%book_instances.forEach(function(book_instance){%>
				<dt>
					<a href="<%=book_instance.url%>"
						><%=book_instance.imprint%></a
					>
				</dt>
				<dd><%=book.status%></dd>
				<%})%>
			</dl>
		</div>
		<%}else{%>
		<p>Do you really want to delete this book?</p>
		<form action="" method="post">
			<div class="form-group">
				<input
					type="hidden"
					id="bookid"
					class="form-control"
					name="bookid"
					value="<%=book._id%>"
				/>
			</div>
			<%}%>
			<button class="btn btn-primary" type="submit">Delete</button>
		</form>
	</body>
</html>
